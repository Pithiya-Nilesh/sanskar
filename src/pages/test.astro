<!DOCTYPE html>
<html>
<head>
  <title>Navigation Bar with Submenu Dropdown (Tailwind CSS)</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>
  <nav class="bg-gray-800 text-white p-4">
    <ul id="main-menu" class="flex space-x-4">
      <li><a href="#" class="hover:text-gray-300">Home</a></li>
      <li class="relative">
        <a href="#" class="hover:text-gray-300">Products</a>
        <ul class="sub-menu absolute left-0 top-10 bg-gray-700 p-2 hidden">
          <li><a href="#" class="hover:text-gray-300">Product 1</a></li>
          <li><a href="#" class="hover:text-gray-300">Product 2</a></li>
          <li><a href="#" class="hover:text-gray-300">Product 3</a></li>
        </ul>
      </li>
      <li class="relative">
        <a href="#" class="hover:text-gray-300">Services</a>
        <ul class="sub-menu absolute left-0 top-10 bg-gray-700 p-2 hidden">
          <li><a href="#" class="hover:text-gray-300">Service 1</a></li>
          <li><a href="#" class="hover:text-gray-300">Service 2</a></li>
          <li><a href="#" class="hover:text-gray-300">Service 3</a></li>
        </ul>
      </li>
      <li><a href="#" class="hover:text-gray-300">Contact</a></li>
    </ul>
  </nav>

  <script>
    // JavaScript code will go here
  </script>

<!-- ... Rest of the HTML ... -->

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const mainMenuItems = document.querySelectorAll("#main-menu > li");

    mainMenuItems.forEach(function (menuItem) {
      const submenu = menuItem.querySelector(".sub-menu");
      let hideTimeout;

      if (submenu) {
        menuItem.addEventListener("mouseenter", function () {
          clearTimeout(hideTimeout);
          submenu.style.display = "block";
        });

        menuItem.addEventListener("mouseleave", function () {
          hideTimeout = setTimeout(function () {
            submenu.style.display = "none";
          }, 2000); // 2-second delay
        });
      }
    });
  });
</script>

</body>
</html>
