---
import customer from "../../public/customer.svg";
import previousbtn from "../../public/previousbtn.svg";
import nextbtn from "../../public/nextbtn.svg";
import { Image, Picture } from "@astrojs/image/components";
import Layout from "../layouts/Layout.astro";
import calender from "../../public/calender.svg";
import dollar from "../../public/dollar.svg";
import time from "../../public/time.svg";
import rocket from "../../public/rocket.svg";
import boostside from "../../public/boostside.svg";
import process from "../../public/process.svg";
import reduction from "../../public/reduction.svg";
import improvment from "../../public/improvment.svg";
import erpnext_feature from "../../public/erpnext-feature.svg";
---

<Layout title="slider">
    <section
        class="mx-5 md:max-w-7xl md:mx-auto md:px-24 flex flex-wrap sm:text-left md:items-center pt-[6.25rem] md:pt-[6.25rem] lg:pt-[12.5rem]"
    >
        <div
            class="lg:w-3/12 md:w-full sm:w-full text-[#31393C] font-semibold mb-5 md:mb-0"
        >
            <h1 class="text-2xl md:text-3xl lg:text-4xl">
                Lesser costs, better results!
            </h1>
            <p class="text-base md:text-lg lg:text-xl mt-3 md:mt-3 lg:mt-5">
                Here's what our clients have achieved through Successful
                Implementation for manufacturing!
            </p>
        </div>
        <div class="lg:w-9/12 md:w-full w-full md:pl-5">
            <div
                id="carouselExampleCaptions"
                class="relative"
                data-te-carousel-init
                data-te-carousel-slide
            >
                <!--Carousel indicators-->
                <div
                    class="absolute bottom-0 left-0 right-0 z-[2] mx-[15%] mb-4 flex list-none justify-center p-0"
                    data-te-carousel-indicators
                >
                    <button
                        type="button"
                        data-te-target="#carouselExampleCaptions"
                        data-te-slide-to="0"
                        data-te-carousel-active
                        class="mx-[3px] box-content h-[3px] w-[30px] flex-initial cursor-pointer border-0 border-y-[10px] border-solid border-transparent bg-white bg-clip-padding p-0 -indent-[999px] opacity-50 transition-opacity duration-[600ms] ease-[cubic-bezier(0.25,0.1,0.25,1.0)] motion-reduce:transition-none"
                        aria-current="true"
                        aria-label="Slide 1"></button>
                    <button
                        type="button"
                        data-te-target="#carouselExampleCaptions"
                        data-te-slide-to="1"
                        class="mx-[3px] box-content h-[3px] w-[30px] flex-initial cursor-pointer border-0 border-y-[10px] border-solid border-transparent bg-white bg-clip-padding p-0 -indent-[999px] opacity-50 transition-opacity duration-[600ms] ease-[cubic-bezier(0.25,0.1,0.25,1.0)] motion-reduce:transition-none"
                        aria-label="Slide 2"></button>
                </div>

                <!--Carousel items-->
                <div
                    class="relative w-full overflow-hidden after:clear-both after:block after:content-['']"
                >
                    <!--First item-->
                    <div
                        class="relative float-left -mr-[100%] w-full transition-transform duration-[600ms] ease-in-out motion-reduce:transition-none"
                        data-te-carousel-active
                        data-te-carousel-item
                        style="backface-visibility: hidden"
                    >
                        <div class="block flex gap-7 overflow-x-hidden">
                            <div
                                class="grid flex-shrink-0 p-5 let-shadow w-64 h-64 mr-10"
                            >
                                <Image
                                    class="justify-self-end"
                                    src={process}
                                    alt="process"
                                />
                                <p
                                    class="text-[#31393C] text-[4rem] leading-[4.75rem] font-bold"
                                >
                                    23%
                                </p>
                                <p class="text-[#31393C] font-semibold">
                                    Faster Processes through automation.
                                </p>
                            </div>
                            <div
                                class="grid flex-shrink-0 p-5 rounded-[10px] let-shadow w-64 h-64 mr-10"
                            >
                                <Image
                                    class="justify-self-end"
                                    src={reduction}
                                    alt="reduction"
                                />
                                <p
                                    class="text-[#31393C] text-[4rem] leading-[4.75rem] font-bold"
                                >
                                    40%
                                </p>
                                <p class="text-[#31393C] font-semibold">
                                    Reduction in Inventory Costs with real-time
                                    visibility and optimized stock levels.
                                </p>
                            </div>
                            <div
                                class="grid flex-shrink-0 p-5 rounded-[10px] let-shadow w-64 h-64 mr-10"
                            >
                                <Image
                                    class="justify-self-end"
                                    src={improvment}
                                    alt="improvment"
                                />
                                <p
                                    class="text-[#31393C] text-[4rem] leading-[4.75rem] font-bold"
                                >
                                    30%
                                </p>
                                <p class="text-[#31393C] font-semibold">
                                    Improvement in on-time delivery through
                                    effective production planning and
                                    scheduling.
                                </p>
                            </div>
                        </div>
                    </div>
                    <!--Second item-->
                    <div
                        class="relative float-left -mr-[100%] hidden w-full transition-transform duration-[600ms] ease-in-out motion-reduce:transition-none"
                        data-te-carousel-item
                        style="backface-visibility: hidden"
                    >
                        <div
                            class="grid flex-shrink-0 p-5 rounded-[10px] let-shadow w-64 h-64 mr-10"
                        >
                            <Image
                                class="justify-self-end"
                                src={rocket}
                                alt="rocket"
                            />
                            <p
                                class="text-[#31393C] text-[4rem] leading-[4.75rem] font-bold"
                            >
                                50%
                            </p>
                            <p class="text-[#31393C] font-semibold">
                                Reduction in Quality Issues through
                                comprehensive quality control features.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    .box {
        box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.07);
    }
</style>
